{{#section 'css'}}
<link rel="stylesheet" href="/css/bootstrap.min.css" />
{{/section}}

{{#section 'js'}}
<script src="/js/jquery-3.4.1.slim.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/popper.min.js"></script>
{{/section}}

{{#section 'title'}}
Online Store
{{/section}}
<div class="container-fluid">
    <div class="row bg-dark">
        <div class="col-1">

        </div>
        <div class="col-10">
            {{>header}}
        </div>
        <div class="col-1">

        </div>
    </div>
    <div class="row mt-2" style="background-color: #f5f5f5;">
        <div class="col-1">

        </div>
        <div class="col-10 bg-white">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-4">
                        <img src="/images/{{product.ProID}}/main.jpg" class="img-fluid" alt="Responsive image">
                    </div>
                    <div class="col-8">
                        <h2>{{product.ProName}}</h2>
                        <h1 class="text-danger">{{product.Price}}</h1>
                        <p>Quantity: {{product.Quantity}}</p>
                        <b>Detail</b>
                        </br>
                        {{{product.FullDes}}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
    </div>
    <div class="row">
        <div class="col">
            {{>footer}}
        </div>
    </div>
</div>